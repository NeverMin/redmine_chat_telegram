<div class="archive-top">
  <div class="archive-datetimepicker">
    <span><%= t 'redmine_chat_telegram.archive.goto_date' %>:</span>
    <input id="datetimepicker" type="text" placeholder="<%= t 'redmine_chat_telegram.archive.select_date' %>">
  </div>
  <div class="archive-search">
    <span><%= t 'redmine_chat_telegram.archive.search' %>:</span>
    <input
      size="33"
      id="telegram-search-input"
      type="text"
      data-messages="<%= @telegram_messages.to_json %>"
      placeholder="<%= t 'redmine_chat_telegram.archive.input_search_query' %>">
  </div>
  <div style="clear: both;"></div>
  <hr>
</div>
<%= render partial: 'archive_form'%>
<hr>
<%= submit_tag t('redmine_chat_telegram.archive.copy_to_issue'),
  onclick: "$('.archive-form').submit()",
  class: 'archive-submit-button'%>
